{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "out",
		"sourceMap": true,
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@src/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*", "src/ormconfig.ts"
	]
}